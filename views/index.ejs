                            <script>
                                document.addEventListener('DOMContentLoaded', function () {
                                    // Locations
                                    const locations = [
                                        { name: "Dalmine", coords: [45.6484, 9.6056], type: "green", status: "Attiva" },
                                        { name: "Carenno", coords: [45.8051, 9.4962], type: "green", status: "Attiva" },
                                        { name: "Serina", coords: [45.8715, 9.7346], type: "yellow", status: "In arrivo" },
